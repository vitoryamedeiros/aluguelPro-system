                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path
                        d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.711 2.598 2.654-.698c.93.509 1.842.769 2.806.769 3.181 0 5.767-2.587 5.767-5.766.001-3.182-2.585-5.768-5.767-5.768zm0 11.761c-.873 0-1.676-.233-2.525-.734l-1.806.475.483-1.767c-.573-.894-.875-1.854-.875-2.969.001-3.303 2.687-5.989 5.989-5.989 3.303 0 5.989 2.686 5.989 5.989 0 3.303-2.687 5.989-5.989 5.989zm9.869-5.994c0-5.456-4.432-9.888-9.888-9.888-5.456 0-9.888 4.432-9.888 9.888 0 1.942.565 3.74 1.54 5.276l-2.663 9.729 9.954-2.613c1.503.923 3.243 1.496 5.057 1.496 5.456 0 9.888-4.432 9.888-9.888z">
                    </path>
                </svg>
                Enviar no WhatsApp
            </button>
            <button onclick="closeModal()"
                style="background: transparent; border: none; color: var(--text-muted); margin-top: 16px; cursor: pointer; text-decoration: underline;">
                Voltar e editar
            </button>
        </div>
    </div>

    <script>
        // Configuration & State
        const STORAGE_KEY = 'aluguelPro_data';
        let config = {
            prices: { table: 15.00, chair: 5.00 },
            whatsapp: '5581999120970',
            pixKey: 'chave@pix.com.br',
            welcomeMessage: 'Ol√°! Gostaria de fazer um pedido de aluguel.'
        };

        let order = {
            tables: 0,
            chairs: 0
        };

        // Load Config
        function loadConfig() {
            const stored = localStorage.getItem(STORAGE_KEY);
            if (stored) {
                const data = JSON.parse(stored);
                if (data.config) {
                    config.whatsapp = data.config.whatsapp || config.whatsapp;
                    config.pixKey = data.config.pixKey || config.pixKey;
                    config.welcomeMessage = data.config.welcomeMessage || config.welcomeMessage;
                }
                if (data.prices) {
                    config.prices = data.prices;
                }
            }
            updatePricesUI();
        }

        function updatePricesUI() {
            // Update Combo Prices
            const comboSimplesPrice = (config.prices.table * 1) + (config.prices.chair * 4);
            const comboFestaPrice = (config.prices.table * 10) + (config.prices.chair * 40);

            document.getElementById('price-combo-simples').textContent = formatMoney(comboSimplesPrice);
            document.getElementById('price-combo-festa').textContent = formatMoney(comboFestaPrice);

            // Update Footer Phone
            const phone = config.whatsapp.replace(/\D/g, '');
            if (phone.length >= 11) {
                document.getElementById('footer-phone').textContent = `(${phone.slice(0, 2)}) ${phone.slice(2, 7)}-${phone.slice(7)}`;
            }

            // Update Modal Pix
            document.getElementById('modal-pix').textContent = config.pixKey;
        }

        function formatMoney(value) {
            return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        }

        // Order Logic
        function updateQty(type, delta) {
            if (type === 'table') {
                order.tables = Math.max(0, order.tables + delta);
                document.getElementById('qtyTable').value = order.tables;
            } else {
                order.chairs = Math.max(0, order.chairs + delta);
                document.getElementById('qtyChair').value = order.chairs;
            }
            calculateTotal();
        }

        function setCombo(tables, chairs) {
            order.tables = tables;
            order.chairs = chairs;
            document.getElementById('qtyTable').value = tables;
            document.getElementById('qtyChair').value = chairs;
            calculateTotal();
            document.getElementById('pedido').scrollIntoView({ behavior: 'smooth' });
        }

        function calculateTotal() {
            const tableTotal = order.tables * config.prices.table;
            const chairTotal = order.chairs * config.prices.chair;
            const grandTotal = tableTotal + chairTotal;

            document.getElementById('summary-tables').textContent = `${order.tables} mesas`;
            document.getElementById('total-tables').textContent = formatMoney(tableTotal);

            document.getElementById('summary-chairs').textContent = `${order.chairs} cadeiras`;
            document.getElementById('total-chairs').textContent = formatMoney(chairTotal);

            document.getElementById('grand-total').textContent = formatMoney(grandTotal);
            document.getElementById('modal-total').textContent = formatMoney(grandTotal);
        }

        // Form Handling
        document.getElementById('orderForm').addEventListener('submit', function (e) {
            e.preventDefault();

            if (order.tables === 0 && order.chairs === 0) {
                alert('Por favor, selecione pelo menos uma mesa ou cadeira.');
                return;
            }

            document.getElementById('confirmModal').classList.add('active');
        });

        function closeModal() {
            document.getElementById('confirmModal').classList.remove('active');
        }

        function sendToWhatsApp() {
            const name = document.getElementById('clientName').value;
            const phone = document.getElementById('clientPhone').value;
            const address = document.getElementById('clientAddress').value;
            const date = document.getElementById('eventDate').value;
            const time = document.getElementById('deliveryTime').value;
            const notes = document.getElementById('notes').value;

            const total = (order.tables * config.prices.table) + (order.chairs * config.prices.chair);
            const formattedDate = new Date(date).toLocaleDateString('pt-BR');

            const message = `
üéâ *NOVO PEDIDO - AluguelPro*

üë§ *Cliente:* ${name}
üì± *Telefone:* ${phone}
üìç *Endere√ßo:* ${address}

üìÖ *Data do Evento:* ${formattedDate}
üïê *Hor√°rio:* ${time}

üì¶ *Itens Solicitados:*
‚Ä¢ Mesas: ${order.tables} un
‚Ä¢ Cadeiras: ${order.chairs} un

üí∞ *Valor Total:* ${formatMoney(total)}

üìù *Observa√ß√µes:* ${notes || 'Nenhuma'}

---
_Comprovante de pagamento segue em anexo._
`.trim();

            const whatsappUrl = `https://wa.me/5581999120970?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
            closeModal();
        }

        // Date Picker Restrictions (Disable past dates)
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('eventDate').min = today;

        // Phone Mask
        document.getElementById('clientPhone').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) value = value.slice(0, 11);

            if (value.length > 6) {
                value = `(${value.slice(0, 2)}) ${value.slice(2, 7)}-${value.slice(7)}`;
            } else if (value.length > 2) {
                value = `(${value.slice(0, 2)}) ${value.slice(2)}`;
            } else if (value.length > 0) {
                value = `(${value}`;
            }

            e.target.value = value;
        });

        // Initialize
        loadConfig();
    </script>
</body>

</html>